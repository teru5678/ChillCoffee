<div class = "row">
<% if comments.present? %>
  <% comments.each do |comment| %>
    <div class ="col-lg-4">
      <div class = "card mt-3 shadow-sm">
        <div class = "row justify-content-center">
           <p class = "card-title"><%= comment.user.name %>さんのコメント<i class="fa-regular fa-comment"></i></p>
        </div>
        <div class = "row justify-content-center">
          <div class = "col-4">
            <p class = "card-text"><%= comment.comment %></p>
          </div>
          <div class = "col-4">
            <% if comment.user == current_user %>
              <%= link_to shop_comment_path(comment.shop, comment), method: :delete do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            <% end %>
          </div>
          <div class = "col-4">
            <% if user_signed_in? %>
              <% if current_user.admin? %>
              <%= link_to "削除", shop_comment_path(comment.shop, comment), method: :delete ,class: "btn btn-sm btn-danger" %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
  <% else %>
   <div class = "row justify-content-center">
     <p>コメントはありません</p>
   </div>
  <% end %>