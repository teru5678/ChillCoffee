<div class = "container">
  <div class = "row mt-5">
    <h3>店舗登録</h3>
  </div>
    <%= form_with model: @shop, url: shops_path, method: :post do |f| %>
    <div class = "row">
      <label class = "col-2 mt-2">店舗名</label>
        <%= f.text_field :shop_name, autofocus: true, class: 'form-control col-8' %>
    </div>

    <div class = "row mt-3">
      <label class = "col-2 mt-2">営業時間</label>
        <%= f.text_field :opneing, class: 'form-control col-8' %>
    </div>

    <div class = "row mt-3">
      <label class = "col-2 mt-2">定休日</label>
        <%= f.text_field :closed, class: 'form-control col-8' %>
    </div>

    <div class = "row mt-3">
      <label class = "col-2 mt-2">画像</label>
      　　 <%= f.file_field :image, accept: "image/*" %>
    </div>

    <div class = "row mt-3">
      <label class = "col-2 mt-2">住所</label>
        <%= f.text_field :address, placeholder: "住所を入力してください", class: 'form-control col-8' %>
    </div>

    <div class = "row mt-2">
      <label class = "col-5 offset-2">
        ※住所を入力すると自動で地図（GoogleMap）が表示されます
      </label>
      <script src="shop.js"></script>
    </div>
    <% end %>
</div>