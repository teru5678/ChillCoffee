<div class = "container">
  <div class = "row mt-5">
    <div class= "col">
      <h3>店舗一覧</h3>
    </div>
    <div class = "search_form">
      <%= render "shops/search_form", q: @q %>
    </div>
    </div>
    <% if @shops.present? %>
    <div class = "shops">
      <%= render "shops/shop", shops: @shops %>
    </div>
    <div class = "row justify-content-center">
      <%= paginate @shops %>
    </div>
    <% else %>
      <div class="shop-not-found row mt-5 justify-content-center">
        <h4>条件に合うお店がありません</h4>
      </div>
    <% end %>
</div>


