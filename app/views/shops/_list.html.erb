<div class = "container">

  <div class = "row">
    <h4><%= @shop.name %></h4>
  </div>

  <div class = "row">
    <div class = "col-2">
      <%= image_tag @shop.image, size: "300x300" %>
    </div>
    <div class = "col-7 offset-1">
      <table class = "shop-item">
        <tr><th>住所</th><td><%= @shop.address %></td></tr>
        <tr><th>電話番号</th><td><%= @shop.phone %></td></tr>
        <tr><th>営業時間</th><td><%= @shop.opneing %></td></tr>
        <tr><th>定休日</th><td><%= @shop.closed %></td></tr>
      </table>
      <div class = "tag-item">
        <% @shop.tags.each do |tag| %>
          <%= tag.name %>
        <% end %>
      </div>
    </div>
  </div>
</div>